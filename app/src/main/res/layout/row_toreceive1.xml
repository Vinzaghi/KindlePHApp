<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="toreceive1RowModel" type="com.kindleapp.app.modules.reckindleminipotandscented.data.model.Toreceive1RowModel"/>
    </data>
    <LinearLayout android:id="@+id/linearToReceiveProd"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal" style="@style/groupStylecornerRadius_6">
        <ImageView android:id="@+id/imageImageThirteen"
            android:layout_height="@dimen/_96pxh"
            android:layout_marginBottom="@dimen/_1pxv"
            android:layout_width="@dimen/_103pxh"
            android:scaleType="fitXY" cornerRadius="@{@dimen/_20pxh}"
            imageRes="@{@drawable/img_image6_96x103}"
            tools:ignore="ContentDescription" tools:src="@drawable/img_image6_96x103"/>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearColumnkindleminipot"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_14pxh"
            android:layout_marginTop="@dimen/_1pxv"
            android:layout_weight="0.65" android:layout_width="0dp" android:orientation="vertical">
            <TextView android:id="@+id/txtKindleMiniPot"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_width="match_parent"
                android:text="@{toreceive1RowModel.txtKindleMiniPot}"
                style="@style/txtInterregular14" tools:text="@string/msg_kindle_mini_pot2"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtScentsLavende"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_1pxv"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{toreceive1RowModel.txtScentsLavende}"
                style="@style/txtInterregular12_1" tools:text="@string/msg_scents_lavende"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtMeasurement"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_1pxv"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@{toreceive1RowModel.txtMeasurement}"
                style="@style/txtInterregular12_1" tools:text="@string/lbl_size_50ml"/>
            <LinearLayout android:id="@+id/linearRowprice"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_13pxv"
                android:layout_width="match_parent" android:orientation="horizontal">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtPrice"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_weight="0.59"
                    android:layout_width="0dp" android:singleLine="true"
                    android:text="@{toreceive1RowModel.txtPrice}"
                    style="@style/txtInterregular14" tools:text="@string/lbl_58_00"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtQtyCounter"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_99pxh"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_weight="0.41"
                    android:layout_width="0dp" android:singleLine="true"
                    android:text="@{toreceive1RowModel.txtQtyCounter}"
                    style="@style/txtInterregular14" tools:text="@string/lbl_qty_1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
